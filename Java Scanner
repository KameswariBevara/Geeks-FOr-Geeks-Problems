import java.util.Scanner;

class Main {
  public static void main(String[] args) {
    Scanner myObj = new Scanner(System.in);

    System.out.println("Enter a, b:");
    float a,b,c;

     a = myObj.nextFloat() ;
     b = myObj.nextFloat();
     c = a+b;
    

    
    System.out.println("a: " + a); 
    System.out.println("b: " + b); 
    System.out.println("sum : " + c); 
  }
}
